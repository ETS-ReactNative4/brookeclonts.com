<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

RewriteRule ^index\.php$ - [L]

RewriteCond %{REQUEST_URI} !\.
RewriteCond %{REQUEST_URI} !.+/
RewriteCond %{REQUEST_URI} !^$
RewriteCond %{REQUEST_URI} !^/$
RewriteCond %{REQUEST_URI} !^/(es|pdf|jp|tc|sc|science|news|m|microscope2|microscope|img|test|countdown_files|site|unboxing)$
#RewriteRule ^(.*)$ http://www.myariix.com/esuite/home/$1?template=puritii [R=301,L]
RewriteRule ^(.*)$ https://xoffice.ariix.com/XOffice/access/puritii/$1 [R=301,L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]




</IfModule>
